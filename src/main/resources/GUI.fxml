<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SmartHomeGUIController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <HBox spacing="10">
        <Button text="Toggle Light ON" onAction="#handleToggleLightOn"/>
        <Button text="Toggle Light OFF" onAction="#handleToggleLightOff"/>
    </HBox>
    <Button text="Stream Temperature" onAction="#handleStreamTemperature"/>
    <Button text="Report Status" onAction="#handleReportStatus"/>
    <TextArea fx:id="outputArea" editable="false"/>
</VBox>